{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "lib": [
            "es2017",
            "dom",
            "webworker"
        ],
        "resolveJsonModule": true,
        "alwaysStrict": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "./src/**/*.test.*",
        "./src/**/*.spec.*"
    ]
}
